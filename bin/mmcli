#!/usr/bin/env ruby

require 'optparse'
require 'methadone'
require 'mmcli.rb'
require 'fileutils'


class App
  include Methadone::Main
  include Methadone::CLILogging
  include Methadone::SH
  
  prefix = File.join(File.expand_path(__dir__), '..', 'tmp', 'aruba') if ENV['ARUBA_HACK']  
  main do |manifest_file_path|
    if options[:d].any?
      File.open(manifest_file_path, "r") do |f|
        File.open("#{manifest_file_path}.tmp", 'w') do |f2|
          f.each_line do |line|
            f2.write(line) unless options[:d].include?(line.chomp)
          end
        end
      end
      FileUtils.mv "#{manifest_file_path}.tmp", manifest_file_path
    end
    if options[:a].any?
      File.open(manifest_file_path, "a+") do |f|
        lines_sans_newlines = f.readlines.map(&:chomp)
        options[:a].uniq.each do |path|
          hack_path = prefix ? path.sub(prefix, '') : File.absolute_path(path)
          f.puts hack_path if File.exist?(path) && !lines_sans_newlines.include?(hack_path)
        end
      end
    end
    if options[:l]
      File.open(manifest_file_path, "r") do |f|
        f.each_line { |line| puts line }
      end
    end
  end

  # supplemental methods here

  # Declare command-line interface here

  description "Manifest manager command line interface"
  #
  # Accept flags via:
  options[:a] = []
  ["a", "add", :add].each{|opt| options[opt] = options[:a]}
  options[:d] = []
  ["d", "delete", :delete].each{|opt| options[opt] = options[:d]}
  on("-a <glob>", "--add <glob>", "Add file paths to the manifest for any file which matches the glob pattern") do |s|
    options[:a] << "#{prefix}#{s}"
    while (ARGV.length > 1 && ARGV[0][0] != "-")
      options[:a] << "#{prefix}#{ARGV.shift}"
    end
  end

  on("-d <glob>", "--delete <glob>", "Delete file paths from the manifest for any file which matches the glob pattern") do |s|
    options[:d] << s
    while (ARGV.length > 1 && ARGV[0][0] != "-")
      options[:d] << ARGV.shift
    end
  end
  on("-c", "--clean", "Clean up the manifest file by deleting paths for any non-existent files")
  on("-l", "--list", "List the contents of the manifest file")
  # options[flag] will contain VAL
  #
  # Specify switches via:
  # on("--[no-]switch","Some switch")
  #
  # Or, just call OptionParser methods on opts
  #
  # Require an argument
  arg :"manifest-file-path", "path to the manifest file"
  #
  # # Make an argument optional
  # arg :optional_arg, :optional

  version Mmcli::VERSION

  use_log_level_option :toggle_debug_on_signal => 'USR1'

  go!
end
